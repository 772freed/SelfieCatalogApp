<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/activity_main_back"
    tools:context=".MainActivity" >

    
    <!-- Main Buttons -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:background="@color/horizontal_layout"
		android:layout_marginTop="@dimen/buttons_layout_marginTop"
		android:layout_weight="1"
		android:gravity="bottom" >
     	


     <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/gallery_icon"
        android:drawablePadding="10dp"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:background="@drawable/button_gradient"
        android:onClick="gotoActivity1"
        android:text="@string/view_gallery"
        android:layout_marginLeft="@dimen/button_gap"
        android:layout_marginRight="@dimen/button_gap"

         />
       
     <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/camera_icon"
        android:drawablePadding="10dp"
        android:layout_height="wrap_content"
                android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:background="@drawable/button_gradient"
        android:text="@string/take_photo"
        android:onClick="gotoActivity" 
        />
     
    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/vote_icon"
        android:drawablePadding="10dp"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:background="@drawable/button_gradient"
        android:text="@string/vote"
        android:layout_marginLeft="@dimen/button_gap"
        android:layout_marginRight="@dimen/button_gap" />


</LinearLayout>

        <!-- Gallery view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
		android:background="@color/horizontal_layout"
        android:layout_weight="1"
        android:gravity="top" >
    
  <Gallery
      android:id="@+id/gallery1"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
</LinearLayout>
    
    
 <!-- Image view and Login -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_marginTop="10dp"
		android:background="@color/horizontal_layout"
        android:layout_weight="1" >
    
   <!--  <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/antartica1" /> -->

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_1"
         />

   
</LinearLayout>

     
</LinearLayout>
